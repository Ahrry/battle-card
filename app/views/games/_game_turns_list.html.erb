<% if game_turns.any? %>
  <table class="table table-striped table-of-game-turn">
    <thead>
      <tr>
        <th>#</th>
        <th><%= "#{user_1.username} remaining level" %></th>
        <th><%= "#{user_2.username} remaining level" %></th>
        <th>Winner of turn</th>
      </tr>
    </thead>
    <tbody>
      <% game_turns.each_with_index do |game_turn, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= game_turn.hand_one.remaining_level %></td>
          <td><%= game_turn.hand_two.remaining_level %></td>
          <td><%= game_turn.winner ? game_turn.winner.username : "-" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
