<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag add_user_game_path(@game), method: :post do %>
      <%= text_field_tag :username, nil, class: "form-control input-lg", placeholder: "choose player name..." %>
      <div class="submit-button">
        <%= submit_tag "Create Player", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
  </div>
</div>
